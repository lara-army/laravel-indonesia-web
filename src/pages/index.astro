---
import Layout from "../layouts/app.astro";
import logo from "../assets/logo.svg";
import IconArrowUpRight from "~icons/tabler/arrow-up-right";
---

<Layout>
  <header class="fixed z-50 left-1/2 -translate-x-1/2 top-4">
    <div
      class="h-16 gap-12 relative border border-zinc-300 flex items-center pl-2 pr-6"
    >
      <div
        class="absolute border-l border-t h-[30%] aspect-square transition-all -left-px -top-px group-hover:-left-1 group-hover:-top-1 border-zinc-800"
      >
      </div>
      <div
        class="absolute border-r border-t h-[30%] aspect-square transition-all -right-px -top-px group-hover:-right-1 group-hover:-top-1 border-zinc-800"
      >
      </div>
      <div
        class="absolute border-l border-b h-[30%] aspect-square transition-all -left-px -bottom-px group-hover:-left-1 group-hover:-bottom-1 border-zinc-800"
      >
      </div>
      <div
        class="absolute border-r border-b h-[30%] aspect-square transition-all -right-px -bottom-px group-hover:-right-1 group-hover:-bottom-1 border-zinc-800"
      >
      </div>
      <a href="/" class="flex items-center text-lg font-semibold">
        <img class="size-10" src={logo.src} /> Laravel Indonesia
      </a>
      <div class="flex items-center gap-1">
        <a class="hover:underline text-sm text-zinc-700" href="/">Events</a>
        <span>・</span>
        <a class="hover:underline text-sm text-zinc-700" href="/">Team</a>
        <span>・</span>
        <a
          class="hover:underline text-sm inline-flex gap-1 text-zinc-700"
          href="/"
        >
          Discord
          <IconArrowUpRight />
        </a>
        <span>・</span>
        <a
          class="hover:underline text-sm inline-flex gap-1 text-zinc-700"
          href="/"
        >
          Github
          <IconArrowUpRight />
        </a>
      </div>
    </div>
  </header>
  <main class="flex items-center justify-center relative">
    <div class="absolute z-10 left-0 top-0 bottom-0 w-16 overflow-hidden">
      <div class="scroll-up flex flex-col -space-y-px">
        {
          Array.from({ length: 20 }).map(() => (
            <>
              <div class="size-16 border border-zinc-800 shrink-0">
                <div class="w-full h-1/2 border-b border-zinc-800 bg-red-500" />
                <div class="w-full h-1/2 bg-white" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 flex">
                <div class="w-1/2 h-full border-r border-zinc-800 bg-red-500" />
                <div class="w-1/2 h-full bg-white" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0">
                <div class="w-full h-1/2 border-b border-zinc-800 bg-white" />
                <div class="w-full h-1/2 bg-red-500" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 flex">
                <div class="w-1/2 h-full border-r border-zinc-800 bg-white" />
                <div class="w-1/2 h-full bg-red-500" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 grid grid-cols-2 grid-rows-2">
                <div class="border-r border-b border-zinc-800 bg-red-500" />
                <div class=" bg-white" />
                <div class="bg-white" />
                <div class="border-l border-t border-zinc-800 bg-red-500" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 grid grid-cols-2 grid-rows-2">
                <div class="border-r border-b border-zinc-800 bg-white" />
                <div class="bg-red-500" />
                <div class="bg-red-500" />
                <div class="border-l border-t border-zinc-800 bg-white" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 flex flex-col">
                <div class="h-1/3 w-full bg-red-500" />
                <div class="h-1/3 w-full bg-white border-x border-zinc-800" />
                <div class="h-1/3 w-full bg-red-500" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 flex">
                <div class="w-1/3 h-full bg-white" />
                <div class="w-1/3 h-full bg-red-500 border-x border-zinc-800" />
                <div class="w-1/3 h-full bg-white" />
              </div>
            </>
          ))
        }
      </div>
    </div>
    <div
      class="inner relative min-h-screen border-x border-dashed border-zinc-800 flex gap-12 flex-col items-center justify-center"
    >
      <div
        class="absolute left-0 -translate-x-full border-l border-dashed border-zinc-800 top-0 bottom-0 w-16"
      >
        <svg width="100%" height="100%" aria-hidden="true"
          ><defs
            ><pattern
              viewBox="0 0 10 10"
              width="8"
              height="8"
              patternUnits="userSpaceOnUse"
              id="_r9R_g_"
              ><line
                x1="0"
                y1="10"
                x2="10"
                y2="0"
                stroke="currentColor"
                vector-effect="non-scaling-stroke"
                class="[stroke:hsl(0,0%,0%)] dark:[stroke:hsl(0,0%,30%)]"
              ></line></pattern
            ></defs
          ><rect width="100%" height="100%" fill="url(#_r9R_g_)"></rect></svg
        >
      </div>
      <div
        class="absolute right-0 translate-x-full border-r border-dashed border-zinc-800 top-0 bottom-0 w-16"
      >
        <svg width="100%" height="100%" aria-hidden="true"
          ><defs
            ><pattern
              viewBox="0 0 10 10"
              width="8"
              height="8"
              patternUnits="userSpaceOnUse"
              id="_r9R_g_"
              ><line
                x1="0"
                y1="10"
                x2="10"
                y2="0"
                stroke="currentColor"
                vector-effect="non-scaling-stroke"
                class="[stroke:hsl(0,0%,0%)] dark:[stroke:hsl(0,0%,30%)]"
              ></line></pattern
            ></defs
          ><rect width="100%" height="100%" fill="url(#_r9R_g_)"></rect></svg
        >
      </div>
      <div class="relative flex flex-col -space-y-[18rem]">
        <span
          class="font-black text-[12rem] select-none leading-[0.8] text-center text-white"
          style="-webkit-text-stroke:1px var(--color-zinc-500);"
        >
          LARAVEL INDONESIA
        </span>
        <span
          class="font-black text-[12rem] select-none leading-[0.8] text-center text-white"
          style="-webkit-text-stroke:1px var(--color-zinc-500);"
        >
          LARAVEL INDONESIA
        </span>
        <span
          class="font-black text-[12rem] select-none leading-[0.8] text-center text-white"
          style="-webkit-text-stroke:1px var(--color-zinc-500);"
        >
          LARAVEL INDONESIA
        </span>
        <span
          class="font-black text-[12rem] select-none leading-[0.8] text-center text-white"
          style="-webkit-text-stroke:1px var(--color-zinc-500);"
        >
          LARAVEL INDONESIA
        </span>
        <span
          class="font-black text-[12rem] select-none leading-[0.8] text-center text-white"
          style="-webkit-text-stroke:1px var(--color-zinc-500);"
        >
          LARAVEL INDONESIA
        </span>
        <h1 class="font-black text-[12rem] leading-[0.8] text-center">
          LARAVEL INDONESIA
        </h1>
      </div>
      <button
        class="text-laravel border-laravel/30 bg-linear-to-b from-transparent to-laravel/6 after:content-[''] after:absolute after:inset-0 after:-z-1 transition-all hover:after:bg-laravel after:transition-all hover:text-white h-12 px-6 border relative group hover:-rotate-6"
      >
        <div
          class="absolute border-l border-t h-[30%] aspect-square transition-all -left-px -top-px group-hover:-left-1 group-hover:-top-1 border-laravel"
        >
        </div>
        <div
          class="absolute border-r border-t h-[30%] aspect-square transition-all -right-px -top-px group-hover:-right-1 group-hover:-top-1 border-laravel"
        >
        </div>
        <div
          class="absolute border-l border-b h-[30%] aspect-square transition-all -left-px -bottom-px group-hover:-left-1 group-hover:-bottom-1 border-laravel"
        >
        </div>
        <div
          class="absolute border-r border-b h-[30%] aspect-square transition-all -right-px -bottom-px group-hover:-right-1 group-hover:-bottom-1 border-laravel"
        >
        </div>
        Join Discord
      </button>
    </div>
    <div class="absolute z-10 right-0 top-0 bottom-0 w-16 overflow-hidden">
      <div class="scroll-down flex flex-col -space-y-px">
        {
          Array.from({ length: 20 }).map(() => (
            <>
              <div class="size-16 border border-zinc-800 shrink-0">
                <div class="w-full h-1/2 border-b border-zinc-800 bg-red-500" />
                <div class="w-full h-1/2 bg-white" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 flex">
                <div class="w-1/2 h-full border-r border-zinc-800 bg-red-500" />
                <div class="w-1/2 h-full bg-white" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0">
                <div class="w-full h-1/2 border-b border-zinc-800 bg-white" />
                <div class="w-full h-1/2 bg-red-500" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 flex">
                <div class="w-1/2 h-full border-r border-zinc-800 bg-white" />
                <div class="w-1/2 h-full bg-red-500" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 grid grid-cols-2 grid-rows-2">
                <div class="border-r border-b border-zinc-800 bg-red-500" />
                <div class=" bg-white" />
                <div class="bg-white" />
                <div class="border-l border-t border-zinc-800 bg-red-500" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 grid grid-cols-2 grid-rows-2">
                <div class="border-r border-b border-zinc-800 bg-white" />
                <div class="bg-red-500" />
                <div class="bg-red-500" />
                <div class="border-l border-t border-zinc-800 bg-white" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 flex flex-col">
                <div class="h-1/3 w-full bg-red-500" />
                <div class="h-1/3 w-full bg-white border-x border-zinc-800" />
                <div class="h-1/3 w-full bg-red-500" />
              </div>
              <div class="size-16 border border-zinc-800 shrink-0 flex">
                <div class="w-1/3 h-full bg-white" />
                <div class="w-1/3 h-full bg-red-500 border-x border-zinc-800" />
                <div class="w-1/3 h-full bg-white" />
              </div>
            </>
          ))
        }
      </div>
    </div>
  </main>
</Layout>

<style>
  @keyframes scrollUp {
    0% {
      transform: translateY(-50%);
    }
    100% {
      transform: translateY(0);
    }
  }

  @keyframes scrollDown {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-50%);
    }
  }

  .scroll-up {
    animation: scrollUp 240s linear infinite;
  }

  .scroll-down {
    animation: scrollDown 240s linear infinite;
  }
</style>
